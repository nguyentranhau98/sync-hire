# Server Configuration
PORT=8080
ENVIRONMENT=development

# API Security (shared secret between Next.js and FastAPI)
API_SECRET_KEY=your_api_secret_key_here

# Stream Video Configuration
STREAM_API_KEY=your_stream_api_key_here
STREAM_API_SECRET=your_stream_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-realtime-preview

# Alternative: Gemini Configuration (comment out OpenAI if using this)
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-2.5-flash
# GEMINI_USE_REALTIME=false  # Set to 'true' to use Gemini Live realtime API

# Deepgram STT Configuration (only needed when NOT using Realtime LLMs)
# When using Gemini Realtime or OpenAI Realtime, built-in STT is used instead
# DEEPGRAM_API_KEY=your_deepgram_api_key_here
# DEEPGRAM_SAMPLE_RATE=48000
# DEEPGRAM_LANGUAGE=en-US

# HeyGen Avatar Configuration
HEYGEN_API_KEY=your_heygen_api_key_here
HEYGEN_AVATAR_ID=default
HEYGEN_VIDEO_QUALITY=LOW

# Next.js Webhook URL
NEXTJS_WEBHOOK_URL=http://localhost:3000

# Agent Settings
AGENT_FPS=10
AGENT_TIMEOUT=3600

# Logging (optional)
# LOG_LEVEL_WEBRTC=WARNING  # Set to DEBUG to diagnose ICE/STUN connection issues
